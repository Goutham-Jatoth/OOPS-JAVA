// BankAccount.java
public class BankAccount {
    // Private Data Members (Encapsulation)
    private String name;
    private long accountNumber;
    private double balance;
    private int pin;

    // Constructor (user-defined)
    public BankAccount(String name, long accountNumber, double balance, int pin) {
        this.name = name;
        this.accountNumber = accountNumber;
        this.balance = balance;
        this.pin = pin;
    }

    // Deposit Method
    public void deposit(int enteredPin, double amount) {
        if (validatePin(enteredPin)) {
            if (amount > 0) {
                balance += amount;
                System.out.println("Deposit of ₹" + amount + " successful. Current Balance: ₹" + balance);
            } else {
                System.out.println("Invalid deposit amount.");
            }
        } else {
            System.out.println("Invalid PIN. Transaction denied.");
        }
    }

    // Withdraw Method (maintain min balance ₹500)
    public void withdraw(int enteredPin, double amount) {
        if (validatePin(enteredPin)) {
            if (amount > 0 && balance - amount >= 500) {
                balance -= amount;
                System.out.println("Withdrawal of ₹" + amount + " successful. Current Balance: ₹" + balance);
            } else {
                System.out.println("Insufficient balance or invalid amount (Minimum balance ₹500 must be maintained).");
            }
        } else {
            System.out.println("Invalid PIN. Transaction denied.");
        }
    }

    // Print Balance Method
    public void printBalance(int enteredPin) {
        if (validatePin(enteredPin)) {
            System.out.println("Account Holder: " + name + " | Account Number: " + accountNumber);
            System.out.println("Current Balance: ₹" + balance);
        } else {
            System.out.println("Invalid PIN. Access denied.");
        }
    }

    // Private helper method for PIN validation
    private boolean validatePin(int enteredPin) {
        return this.pin == enteredPin;
    }
}













// ATMSystem.java
public class ATMSystem {
    public static void main(String[] args) {
        // Creating multiple BankAccount objects (Different Axis Bank account holders)
        BankAccount acc1 = new BankAccount("Goutham", 1234567890L, 10000, 1234);
        BankAccount acc2 = new BankAccount("Rahul", 9876543210L, 2000, 5678);
        BankAccount acc3 = new BankAccount("Priya", 1111222233L, 600, 9999);

        System.out.println("=== Axis Bank ATM System ===\n");

        // Successful deposit
        acc1.deposit(1234, 5000);

        // Wrong PIN deposit
        acc1.deposit(1111, 1000);

        // Successful withdrawal
        acc2.withdraw(5678, 1000);

        // Withdrawal below minimum balance
        acc2.withdraw(5678, 1200);

        // Wrong PIN withdrawal
        acc2.withdraw(1234, 500);

        // Check balance with correct PIN
        acc3.printBalance(9999);

        // Check balance with wrong PIN
        acc3.printBalance(1111);
    }
}
