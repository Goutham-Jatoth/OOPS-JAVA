    -fx-text-fill: #6b7280;
    -fx-font-size: 12px;
}

/* Status box default */
.status-neutral {
    -fx-background-color: #ffffff;
    -fx-border-color: #dbe6fb;
    -fx-border-radius: 8;
    -fx-background-radius: 8;
}

/* Valid */
.status-valid {
    -fx-background-color: linear-gradient(#e8f6ee, #dff3ea);
    -fx-border-color: #9be6b9;
    -fx-border-radius: 8;
    -fx-background-radius: 8;
}

/* Invalid */
