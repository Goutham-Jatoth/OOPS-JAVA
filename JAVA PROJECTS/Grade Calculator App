üß† 3. Models (Student, Subject, GradeCalculator)
Subject.java
package app.models;

public class Subject {
    private String name;
    private double marks;
    private double credits;

    public Subject(String name, double marks, double credits) {
        this.name = name;
        this.marks = marks;
        this.credits = credits;
    }

    public String getName() { return name; }
    public double getMarks() { return marks; }
    public double getCredits() { return credits; }

    public double getGradePoint() {
        if (marks >= 90) return 10;
        if (marks >= 80) return 9;
        if (marks >= 70) return 8;
        if (marks >= 60) return 7;
        if (marks >= 50) return 6;
        if (marks >= 40) return 5;
        return 0;
    }

    public String getLetterGrade() {
        if (marks >= 90) return "A+";
        if (marks >= 80) return "A";
        if (marks >= 70) return "B+";
        if (marks >= 60) return "B";
        if (marks >= 50) return "C";
        if (marks >= 40) return "D";
        return "F";
    }
}

Student.java
package app.models;

import java.util.ArrayList;

public class Student {

    private String name;
    private String roll;
    private ArrayList<Subject> subjects;

    public Student(String name, String roll) {
        this.name = name;
        this.roll = roll;
        subjects = new ArrayList<>();
    }

    public void addSubject(Subject s) { subjects.add(s); }

    public ArrayList<Subject> getSubjects() { return subjects; }

    public String getName() { return name; }
    public String getRoll() { return roll; }
}

GradeCalculator.java
package app.models;

public class GradeCalculator {

    public static double calculatePercentage(Student s) {
        return s.getSubjects().stream()
                .mapToDouble(Subject::getMarks)
                .average().orElse(0);
    }

    public static double calculateSGPA(Student s) {
        double totalCredits = 0, weightedGP = 0;
        for (Subject sub : s.getSubjects()) {
            totalCredits += sub.getCredits();
            weightedGP += sub.getCredits() * sub.getGradePoint();
        }
        return weightedGP / totalCredits;
    }
}

üéÆ 4. MainController.java (Handles UI Logic)
package app.controllers;

import app.models.*;
import javafx.collections.*;
import javafx.fxml.FXML;
import javafx.scene.control.*;

public class MainController {

    @FXML private TextField nameField, rollField;
    @FXML private TextField subjectField, marksField, creditField;
    @FXML private TableView<Subject> subjectTable;
    @FXML private TableColumn<Subject, String> colSubject;
    @FXML private TableColumn<Subject, Double> colMarks, colCredit;
    @FXML private Label resultLabel;

    private ObservableList<Subject> subjectList = FXCollections.observableArrayList();

    @FXML
    public void initialize() {
        colSubject.setCellValueFactory(c -> new javafx.beans.property.SimpleStringProperty(c.getValue().getName()));
        colMarks.setCellValueFactory(c -> new javafx.beans.property.SimpleObjectProperty<>(c.getValue().getMarks()));
        colCredit.setCellValueFactory(c -> new javafx.beans.property.SimpleObjectProperty<>(c.getValue().getCredits()));

        subjectTable.setItems(subjectList);
    }

    @FXML
    public void addSubject() {
        try {
            String sub = subjectField.getText();
            double marks = Double.parseDouble(marksField.getText());
            double credit = Double.parseDouble(creditField.getText());

            subjectList.add(new Subject(sub, marks, credit));

            subjectField.clear();
            marksField.clear();
            creditField.clear();

        } catch (Exception e) {
            resultLabel.setText("Invalid input! Please check values.");
        }
    }

    @FXML
    public void calculateResult() {
        if (nameField.getText().isEmpty() || rollField.getText().isEmpty()) {
            resultLabel.setText("Enter Student Name & Roll Number!");
            return;
        }

        Student student = new Student(nameField.getText(), rollField.getText());
        subjectList.forEach(student::addSubject);

        double percentage = GradeCalculator.calculatePercentage(student);
        double sgpa = GradeCalculator.calculateSGPA(student);

        resultLabel.setText(
                "Percentage: " + String.format("%.2f", percentage) +
                "%  |  SGPA: " + String.format("%.2f", sgpa)
        );
    }
}

