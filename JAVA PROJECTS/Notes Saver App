src/main/java/app/Main.java
package app;

import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Scene;
import javafx.stage.Stage;

public class Main extends Application {
    @Override
    public void start(Stage stage) throws Exception {
        FXMLLoader loader = new FXMLLoader(getClass().getResource("/main_view.fxml"));
        Scene scene = new Scene(loader.load());
        scene.getStylesheets().add(getClass().getResource("/style.css").toExternalForm());

        stage.setTitle("Notes Saver Pro");
        stage.setScene(scene);
        stage.setMinWidth(1000);
        stage.setMinHeight(650);
        stage.show();
    }

    public static void main(String[] args) { launch(args); }
}

src/main/java/app/models/Note.java
package app.models;

import java.time.LocalDateTime;
import java.util.ArrayList;
import java.util.List;
import java.util.UUID;

/**
 * Note model stores content, title, tags and versions.
 */
public class Note {
    public String id;
    public String title;
    public String content;
    public List<String> tags = new ArrayList<>();
    public boolean pinned = false;
    public boolean starred = false;
    public String lastModified; // ISO string
    public List<NoteVersion> versions = new ArrayList<>();
    public String reminderISO = null; // optional reminder time in ISO

    public Note() {
        this.id = UUID.randomUUID().toString();
        this.title = "Untitled";
        this.content = "";
        touch();
    }

    public Note(String title, String content) {
        this.id = UUID.randomUUID().toString();
        this.title = title;
        this.content = content;
        touch();
    }

    public void touch() {
        this.lastModified = LocalDateTime.now().toString();
    }

    public void addVersion() {
        versions.add(new NoteVersion(this.title, this.content, LocalDateTime.now().toString()));
        // keep last 20 versions
        if (versions.size() > 20) versions.remove(0);
    }
}

src/main/java/app/models/NoteVersion.java
package app.models;

/**
 * Simple version snapshot for a note.
 */
public class NoteVersion {
    public String title;
    public String content;
    public String timestamp;

    public NoteVersion() {}

    public NoteVersion(String title, String content, String timestamp) {
        this.title = title;
        this.content = content;
        this.timestamp = timestamp;
    }
}

src/main/java/app/models/NoteManager.java
package app.models;

import com.google.gson.Gson;
import com.google.gson.reflect.TypeToken;

import java.io.IOException;
import java.lang.reflect.Type;
import java.nio.file.*;
import java.util.ArrayList;
import java.util.Comparator;
import java.util.List;

/**
 * NoteManager handles persistence (JSON file) and helper utilities.
 */
public class NoteManager {

    private static final Path STORAGE = Paths.get(System.getProperty("user.home"), ".notes_saver_data.json");
    private static final Gson GSON = new Gson();

    public static List<Note> loadAll() {
        try {
            if (Files.notExists(STORAGE)) return new ArrayList<>();
            String json = Files.readString(STORAGE);
            Type type = new TypeToken<List<Note>>(){}.getType();
            List<Note> list = GSON.fromJson(json, type);
            if (list == null) return new ArrayList<>();
            // sort pinned first then by lastModified desc
            list.sort(Comparator.comparing((Note n) -> !n.pinned)
                    .thenComparing((Note n) -> n.lastModified).reversed());
            return list;
        } catch (Exception e) {
            e.printStackTrace();
            return new ArrayList<>();
        }
    }

    public static void saveAll(List<Note> notes) {
        try {
            String json = GSON.toJson(notes);
            Files.writeString(STORAGE, json, StandardOpenOption.CREATE, StandardOpenOption.TRUNCATE_EXISTING);
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    public static void exportNoteAsTxt(Note note, Path out) throws IOException {
        String header = note.title + System.lineSeparator() + "Tags: " + String.join(", ", note.tags) +
                System.lineSeparator() + "Last Modified: " + note.lastModified + System.lineSeparator() + System.lineSeparator();
        Files.writeString(out, header + note.content, StandardOpenOption.CREATE, StandardOpenOption.TRUNCATE_EXISTING);
    }

    public static List<Note> importFromJson(Path file) throws IOException {
        String json = Files.readString(file);
        Type type = new TypeToken<List<Note>>(){}.getType();
        List<Note> list = GSON.fromJson(json, type);
        return list == null ? new ArrayList<>() : list;
    }
}

src/main/java/app/controllers/MainController.java
package app.controllers;

import app.models.*;
import javafx.animation.PauseTransition;
import javafx.application.Platform;
import javafx.fxml.FXML;
import javafx.scene.control.*;
import javafx.scene.input.KeyCode;
import javafx.scene.layout.HBox;
import javafx.scene.web.WebView;
import javafx.stage.FileChooser;
import javafx.util.Duration;

import java.io.File;
import java.nio.file.Path;
import java.time.LocalDateTime;
import java.time.format.DateTimeFormatter;
import java.util.*;
import java.util.stream.Collectors;

/**
 * MainController - handles UI events and orchestration.
 *
 * Features:
 * - Create / Edit / Delete notes
 * - Autosave with debounce
 * - Search & Tag filter
 * - Pin / Star
 * - Version history
 * - Export / Import
 * - Markdown-ish preview
 * - Reminder schedule (simple)
 */
public class MainController {

    @FXML private ListView<Note> notesList;
    @FXML private TextField searchField;
    @FXML private TextField titleField;
    @FXML private TextField tagsField;
    @FXML private TextArea contentArea;
    @FXML private Button newBtn, deleteBtn, exportBtn, importBtn, versionBtn, reminderBtn;
    @FXML private CheckBox pinCheck, starCheck;
    @FXML private WebView previewWeb;
    @FXML private Label statusLabel;
    @FXML private HBox topBar;

    private List<Note> notes = new ArrayList<>();
    private Note current = null;
    private PauseTransition autosavePause;
    private Timer reminderTimer = new Timer(true);

    @FXML
    public void initialize() {
        notes = NoteManager.loadAll();
        refreshList();

        notesList.setCellFactory(lv -> new ListCell<>() {
            @Override
            protected void updateItem(Note item, boolean empty) {
                super.updateItem(item, empty);
                if (empty || item == null) {
                    setText(null);
                    setGraphic(null);
                } else {
                    String prefix = item.pinned ? "\uD83D\uDCCC " : "";
                    String star = item.starred ? " \u2B50" : "";
                    String tagPreview = (item.tags.isEmpty() ? "" : " [" + String.join(", ", item.tags) + "]");
                    String snippet = item.content.length() > 60 ? item.content.substring(0, 60) + "..." : item.content;
                    setText(prefix + item.title + star + tagPreview + "\n" + snippet);
                }
            }
        });

        notesList.getSelectionModel().selectedItemProperty().addListener((obs, oldV, newV) -> {
            if (newV != null) openNote(newV);
        });

        autosavePause = new PauseTransition(Duration.seconds(1.2));
        autosavePause.setOnFinished(ev -> doAutoSave());

        // content edit triggers autosave debounce
        contentArea.textProperty().addListener((obs, oldV, newV) -> {
            status("Editing...");
            autosavePause.playFromStart();
            renderPreview(newV);
        });

        titleField.textProperty().addListener((obs, oldV, newV) -> {
            status("Editing title...");
            autosavePause.playFromStart();
        });

        tagsField.setOnKeyPressed(e -> {
            if (e.getCode() == KeyCode.ENTER) {
                autosavePause.playFromStart();
            }
        });

        searchField.textProperty().addListener((obs, oldV, q) -> filterList(q));

        // keyboard shortcut for new note (Ctrl+N)
        topBar.getScene(); // safe-guard in some environments

        // If no notes exist create a starter note
        if (notes.isEmpty()) {
            Note starter = new Note("Welcome to Notes Saver", "This is your first note. Start typing...");
            starter.tags.add("welcome");
            notes.add(0, starter);
            NoteManager.saveAll(notes);
            refreshList();
            notesList.getSelectionModel().select(0);
        } else {
            notesList.getSelectionModel().select(0);
        }
    }

    private void status(String msg) {
        statusLabel.setText(msg + " â€¢ " + LocalDateTime.now().format(DateTimeFormatter.ofPattern("HH:mm:ss")));
    }

    private void refreshList() {
        // sort pinned and recent first
        notes.sort(Comparator.comparing((Note n) -> !n.pinned)
                .thenComparing((Note n) -> n.lastModified).reversed());
        notesList.getItems().setAll(notes);
    }

    private void openNote(Note note) {
        if (current != null && current != note) {
            // save previous state quickly
            quickSaveCurrent();
        }
        current = note;
        titleField.setText(note.title);
        contentArea.setText(note.content);
        tagsField.setText(String.join(",", note.tags));
        pinCheck.setSelected(note.pinned);
        starCheck.setSelected(note.starred);
        renderPreview(note.content);
        status("Opened note: " + note.title);
    }

    @FXML
    public void onNewClicked() {
        Note n = new Note("New Note", "");
        notes.add(0, n);
        refreshList();
        notesList.getSelectionModel().select(n);
        status("Created new note");
    }

    @FXML
    public void onDeleteClicked() {
        Note sel = notesList.getSelectionModel().getSelectedItem();
        if (sel == null) return;
        Alert a = new Alert(Alert.AlertType.CONFIRMATION, "Delete note \"" + sel.title + "\"?", ButtonType.YES, ButtonType.NO);
        a.showAndWait().ifPresent(bt -> {
            if (bt == ButtonType.YES) {
                notes.remove(sel);
                NoteManager.saveAll(notes);
                refreshList();
                if (!notes.isEmpty()) notesList.getSelectionModel().select(0);
                status("Deleted note");
            }
        });
    }

    @FXML
    public void onExportClicked() {
        Note sel = notesList.getSelectionModel().getSelectedItem();
        if (sel == null) return;
        FileChooser chooser = new FileChooser();
        chooser.setInitialFileName(sel.title.replaceAll("\\W+", "_") + ".txt");
        File f = chooser.showSaveDialog(contentArea.getScene().getWindow());
        if (f != null) {
            try {
                NoteManager.exportNoteAsTxt(sel, f.toPath());
                status("Exported to " + f.getAbsolutePath());
            } catch (Exception e) {
                e.printStackTrace();
                status("Export failed");
            }
        }
    }

    @FXML
    public void onImportClicked() {
        FileChooser chooser = new FileChooser();
        chooser.getExtensionFilters().add(new FileChooser.ExtensionFilter("JSON", "*.json"));
        File f = chooser.showOpenDialog(contentArea.getScene().getWindow());
        if (f != null) {
            try {
                List<Note> imported = NoteManager.importFromJson(f.toPath());
                if (!imported.isEmpty()) {
                    notes.addAll(0, imported);
                    NoteManager.saveAll(notes);
                    refreshList();
                    status("Imported " + imported.size() + " notes");
                } else {
                    status("No notes found in file");
                }
            } catch (Exception e) {
                e.printStackTrace();
                status("Import failed");
            }
        }
    }

    @FXML
    public void onVersionClicked() {
        Note sel = notesList.getSelectionModel().getSelectedItem();
        if (sel == null) return;
        List<NoteVersion> versions = sel.versions;
        ChoiceDialog<NoteVersion> dialog = new ChoiceDialog<>(null);
        dialog.setTitle("Version History");
        dialog.setHeaderText("Choose a version to preview or restore");
        dialog.getItems().clear();
        versions.forEach(v -> dialog.getItems().add(v));
        dialog.setConverter(new javafx.util.StringConverter<>() {
            @Override
            public String toString(NoteVersion v) {
                if (v == null) return "";
                return v.timestamp + " â€” " + (v.title.length() > 30 ? v.title.substring(0, 30) + "..." : v.title);
            }
            @Override
            public NoteVersion fromString(String string) { return null; }
        });

        dialog.showAndWait().ifPresent(chosen -> {
            if (chosen != null) {
                // show preview and ask restore
                Alert preview = new Alert(Alert.AlertType.CONFIRMATION);
                preview.setTitle("Restore Version?");
                preview.setHeaderText("Preview: " + chosen.timestamp);
                TextArea ta = new TextArea(chosen.content);
                ta.setWrapText(true);
                ta.setEditable(false);
                ta.setPrefRowCount(10);
                preview.getDialogPane().setContent(ta);
                preview.getButtonTypes().setAll(ButtonType.YES, ButtonType.NO);
                preview.showAndWait().ifPresent(bt -> {
                    if (bt == ButtonType.YES) {
                        sel.title = chosen.title;
                        sel.content = chosen.content;
                        sel.touch();
                        NoteManager.saveAll(notes);
                        refreshList();
                        openNote(sel);
                        status("Restored version from " + chosen.timestamp);
                    }
                });
            }
        });
    }

    @FXML
    public void onPinToggle() {
        Note sel = notesList.getSelectionModel().getSelectedItem();
        if (sel == null) return;
        sel.pinned = pinCheck.isSelected();
        sel.touch();
        NoteManager.saveAll(notes);
        refreshList();
    }

    @FXML
    public void onStarToggle() {
        Note sel = notesList.getSelectionModel().getSelectedItem();
        if (sel == null) return;
        sel.starred = starCheck.isSelected();
        sel.touch();
        NoteManager.saveAll(notes);
        refreshList();
    }

    @FXML
    public void onReminderClicked() {
        Note sel = notesList.getSelectionModel().getSelectedItem();
        if (sel == null) return;
        TextInputDialog d = new TextInputDialog();
        d.setTitle("Set Reminder");
        d.setHeaderText("Enter reminder time (yyyy-MM-dd HH:mm) or blank to clear");
        d.setContentText("Time:");
        d.showAndWait().ifPresent(input -> {
            if (input == null || input.trim().isEmpty()) {
                sel.reminderISO = null;
                status("Cleared reminder");
            } else {
                try {
                    LocalDateTime dt = LocalDateTime.parse(input.trim(), DateTimeFormatter.ofPattern("yyyy-MM-dd HH:mm"));
                    sel.reminderISO = dt.toString();
                    scheduleReminder(sel, dt);
                    status("Reminder set for " + input);
                } catch (Exception ex) {
                    status("Invalid format; use yyyy-MM-dd HH:mm");
                }
            }
            sel.touch();
            NoteManager.saveAll(notes);
        });
    }

    private void scheduleReminder(Note note, LocalDateTime when) {
        long delay = java.time.Duration.between(LocalDateTime.now(), when).toMillis();
        if (delay <= 0) {
            status("Reminder time is in the past");
            return;
        }
        reminderTimer.schedule(new TimerTask() {
            @Override
            public void run() {
                Platform.runLater(() -> {
                    Alert a = new Alert(Alert.AlertType.INFORMATION, "Reminder for note: " + note.title, ButtonType.OK);
                    a.setHeaderText("Reminder");
                    a.showAndWait();
                });
            }
        }, delay);
    }

    private void quickSaveCurrent() {
        if (current == null) return;
        current.title = titleField.getText().trim().isEmpty() ? "Untitled" : titleField.getText().trim();
        current.content = contentArea.getText();
        current.tags = Arrays.stream(tagsField.getText().split(","))
                .map(String::trim).filter(s -> !s.isEmpty()).collect(Collectors.toList());
        current.pinned = pinCheck.isSelected();
        current.starred = starCheck.isSelected();
        current.addVersion();
        current.touch();
        NoteManager.saveAll(notes);
    }

    private void doAutoSave() {
        if (current == null) return;
        quickSaveCurrent();
        status("Autosaved");
        refreshList();
    }

    private void renderPreview(String markdown) {
        // Lightweight markdown -> HTML converter for headings, bold, italics, line breaks and code inline
        String html = markdown
                .replaceAll("&", "&amp;")
                .replaceAll("<", "&lt;").replaceAll(">", "&gt;");
        html = html.replaceAll("(?m)^# (.+)$", "<h2>$1</h2>");
        html = html.replaceAll("\\*\\*(.+?)\\*\\*", "<b>$1</b>");
        html = html.replaceAll("\\*(.+?)\\*", "<i>$1</i>");
        html = html.replaceAll("`(.+?)`", "<code>$1</code>");
        html = html.replaceAll("\\n", "<br/>");
        String full = "<html><head><style>body{font-family:Segoe UI, Arial; padding:10px;} pre{background:#f3f4f6;padding:8px;border-radius:6px;} code{background:#eef2ff;padding:2px;border-radius:4px;}</style></head><body>" + html + "</body></html>";
        previewWeb.getEngine().loadContent(full);
    }

    private void filterList(String q) {
        String qlower = q == null ? "" : q.toLowerCase();
        List<Note> filtered = notes.stream().filter(n ->
                n.title.toLowerCase().contains(qlower) ||
                n.content.toLowerCase().contains(qlower) ||
                n.tags.stream().anyMatch(t -> t.toLowerCase().contains(qlower))
        ).collect(Collectors.toList());
        notesList.getItems().setAll(filtered);
    }
}

src/main/resources/main_view.fxml
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
